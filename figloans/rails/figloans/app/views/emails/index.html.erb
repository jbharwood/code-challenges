<p id="notice"><%= notice %></p>

<h1>Emails</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th></th>
      <th>Citizen</th>
      <th>Sender</th>
      <th>Citizen active</th>
      <th>Receiver active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.content %></td>
        <td><%= email. %></td>
        <td><%= email.citizen_id %></td>
        <td><%= email.sender_id %></td>
        <td><%= email.citizen_active %></td>
        <td><%= email.receiver_active %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

